[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501, D100, D101, D102, D103, D104, D105, D106, D107
exclude =
	.venv,
	__pycache__,
	frontend/.next,
	backend/*/migrations

# Ignore docstring requirements and some import checks in autogenerated files
per-file-ignores =
	backend/*/migrations/*.py: F401,E501
	frontend/.next/**: ALL
	backend/core/settings/*.py: F401,F403,F405
	backend/manage.py: E501
	backend/tests/*.py: E501,F401
	backend/*/migrations/*.py: E501
