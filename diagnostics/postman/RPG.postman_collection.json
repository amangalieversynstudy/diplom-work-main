          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = {};",
                  "try { data = pm.response.json(); } catch (e) {}",
                  "if (data.access) pm.environment.set('access', data.access);",
                  "if (data.refresh) pm.environment.set('refresh', data.refresh);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"pass1\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login", ""]
            }
