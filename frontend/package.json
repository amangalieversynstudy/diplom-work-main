{
  "name": "rpg-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "prepare": "[ -d .git ] && husky install || echo 'husky skipped (no .git)'",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "axios": "1.5.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.446.0",
    "next": "14.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^1.5.0",
    "tailwindcss": "^3.4.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "8.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react-hooks": "4.x",
    "husky": "8.x",
    "lint-staged": "14.x",
    "postcss": "^8.4.38",
    "prettier": "2.x"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
